                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#212121"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frank Sweeny"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/seek4"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:id="@+id/seekintend4"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Covid Chronicles EP-2"
                android:gravity="center_vertical"
                android:id="@+id/audiofile4"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A novel bat coronavirus first appears in Wuhan, China in late November of 2019. This family of coronaviruses normally reside in bats living in caves 1000 miles south of Wuhan. Understanding where the virus came from and how it entered the human reservoir will help prevent a similar pandemic in the future."
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_in_main"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/playbtn4"
                android:onClick="fourth"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/play"

                />

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:indeterminateDuration="@android:integer/config_shortAnimTime"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:id="@+id/progresss4"
                android:visibility="gone" />

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/stopbtn4"
                android:onClick="stop"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/stop"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:gravity="center"
