<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".podcasthome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frank Sweeny"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/seek"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:id="@+id/seekintend"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Covid Chronicles EP-1"
                android:id="@+id/audiofile1"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The worldwide spread of COVID-19 is being called the “pandemic of the century” by some. Others are watching the debacle unfold can only wonder if the response to the COVID-19 pandemic will someday be called “the fiasco of the century.”"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_in_main"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/covid1"
                android:onClick="first"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/play"

                />

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:indeterminateDuration="@android:integer/config_shortAnimTime"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:id="@+id/progresss1"
                android:visibility="gone" />

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/covid1st"
                android:onClick="stop"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/stop"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:gravity="center"
                android:id="@+id/seekint"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#212121"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nora Taranto"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/seek2"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:id="@+id/seekintend2"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Workers - Depression and Suicide"
                android:gravity="center_vertical"
                android:id="@+id/audiofile2"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Physician suicide is a problem. There, we said it. Some of us (probably more than you’d think) have lost someone meaningful to suicide. And yet, we don’t talk about suicide and mental health in medicine, or at least, not enough. "
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_in_main"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/playbtn2"
                android:onClick="second"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/play"

                />

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:indeterminateDuration="@android:integer/config_shortAnimTime"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:id="@+id/progresss2"
                android:visibility="gone" />

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/stopbtn2"
                android:onClick="stop"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/stop"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:gravity="center"
                android:id="@+id/seekint2"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="#212121"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frank Sweeny with R. Doug Fields"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/seek3"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
