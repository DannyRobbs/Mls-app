                android:id="@+id/seekintend3"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Why We Snap!"
                android:gravity="center_vertical"
                android:id="@+id/audiofile3"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-condensed-light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Every day we hear about otherwise law-abiding citizens with no history of mental illness or violence that snap and commit savage, senseless, and brutal acts of violence for seemingly trivial provocation. What caused them to snap?"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_in_main"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/playbtn3"
                android:onClick="third"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/play"

                />

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:indeterminateDuration="@android:integer/config_shortAnimTime"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:id="@+id/progresss3"
                android:visibility="gone" />

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/stopbtn3"
                android:onClick="stop"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/stop"

