<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative"
    android:background="#eaeaea"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#eaeaea"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:background="#ffffff"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp"
                android:onClick="results"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="results"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="results"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:layout_margin="20dp"
                            android:textStyle="bold"
                            android:onClick="results"
                            android:text="Results"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:layout_gravity="center"
                                    android:onClick="results"
                                    android:text="-"
                                    android:layout_margin="10dp"
                                    android:textStyle="bold"
                                    android:textColor="#9f9fdd"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:layout_gravity="center"
                                    android:onClick="results"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:id="@+id/upload"
                                    android:text="+"
                                    android:textStyle="bold"
                                    android:textColor="#ff518c"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:layout_gravity="center"
                                    android:text="-"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:id="@+id/download"
                                    android:onClick="results"
                                    android:textStyle="bold"
                                    android:textColor="#000000"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:textStyle="bold"
                                    android:onClick="results"
                                    android:layout_margin="10dp"
                                    android:text="New"
                                    android:textColor="#777777"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:textStyle="bold"
                                    android:onClick="results"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Uploads"
                                    android:textColor="#777777"
                                    android:textSize="15sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-black"
                                    android:textStyle="bold"
                                    android:onClick="results"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Downloads"
                                    android:textColor="#777777"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/results"
                        android:onClick="results"
                        android:layout_margin="10dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    android:backgroundTint="#ffeffb"
                    app:cardCornerRadius="20dp"
                    android:onClick="Portal"
                    android:layout_margin="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:onClick="Portal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:onClick="Portal"
                            android:src="@drawable/portal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:onClick="Portal"
                            android:text="Portal"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fba9e6"
                            android:textSize="15sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            android:background="#ffffff"
                            android:onClick="Portal"
                            android:layout_gravity="center"
                            app:cardCornerRadius="20dp"
                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:onClick="Portal"
                                android:layout_gravity="center"
                                android:text="unilag.edu.ng"
                                android:textColor="#777777"
                                android:textSize="12sp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    android:backgroundTint="#dfdeee"
                    android:onClick="study"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:onClick="study"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="40dp"
                            android:onClick="study"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/study" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:text="Study"
                            android:onClick="study"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#a5a0e2"
                            android:textSize="15sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            android:onClick="study"
                            android:background="#ffffff"
                            android:layout_gravity="center"
                            app:cardCornerRadius="20dp"
                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:textStyle="bold"
                                android:onClick="study"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                android:text="Books/Slides"
                                android:textColor="#777777"
                                android:textSize="12sp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/recyclerView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    android:onClick="quiz"
                    android:backgroundTint="#fed5f3"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:onClick="quiz"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="40dp"
                            android:onClick="quiz"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/quiz" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:onClick="quiz"
                            android:text="Quiz"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fd77db"
                            android:textSize="15sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            android:onClick="quiz"
                            android:background="#ffffff"
                            android:layout_gravity="center"
                            app:cardCornerRadius="20dp"
                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:onClick="quiz"
                                android:layout_gravity="center"
                                android:text="@string/nimelssa_quiz"
                                android:textColor="#777777"
                                android:textSize="12sp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    android:onClick="news"
                    android:backgroundTint="#c6c4ea"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:onClick="news"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="40dp"
                            android:layout_marginLeft="10dp"
                            android:onClick="news"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/news" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:textStyle="bold"
                            android:text="News"
                            android:layout_marginBottom="20dp"
                            android:onClick="news"
                            android:layout_marginLeft="10dp"
                            android:textColor="#8d87e5"
                            android:textSize="15sp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="5dp"
                            android:onClick="news"
                            android:background="#ffffff"
                            android:layout_gravity="center"
                            app:cardCornerRadius="20dp"
                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:textStyle="bold"
                                android:onClick="news"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                android:text="Stay Updated"
                                android:textColor="#777777"
                                android:textSize="12sp" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/exit"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        app:fabSize="mini"
        android:id="@+id/fab"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="bottom|right"
        android:backgroundTint="#eaeaea"
        android:background="#eaeaea"
        app:borderWidth="0dp"
        android:elevation="2dp"
        app:rippleColor="#000000" />
</RelativeLayout>